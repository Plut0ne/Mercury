MainScreen:

<MainScreen>:

    ScreenManager:
        id: screen_manager
        HomeScreen:
        InfoScreen:
        NewMeasureScreen:

    MDNavigationDrawer:
        id: nav_drawer
        BoxLayout:
            orientation: "vertical"
            padding: "1dp"
            spacing: "1dp"
            MDLabel:
                text: "Menu"
                font_style: "H6"
                size_hint_y: None
                height: self.texture_size[1]
            ScrollView:
                MDList:
                    OneLineIconListItem:
                        text: "Home"
                        height: "50dp"
                        on_press:
                            app.navigate_to("home")
                            app.root.ids.nav_drawer.set_state("close")
                        IconLeftWidget:
                            icon: "home"
                    OneLineIconListItem:
                        text: "Info"
                        height: "50dp"
                        on_press:
                            app.navigate_to("info")
                            app.root.ids.nav_drawer.set_state("close")
                        IconLeftWidget:
                            icon: "information"
            MDLabel:
                text: "Version 1.0.0"
                font_style: "Caption"
                size_hint_y: None
                height: self.texture_size[1]

<HomeScreen>:
    name: "home"
    BoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: "Home"
            elevation: 4
            left_action_items: [["menu", lambda x: app.root.ids.nav_drawer.set_state("open")]]
        HomeContent:
        
<InfoScreen>:
    name: "info"
    BoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: "Informazioni"
            elevation: 4
            left_action_items: [["menu", lambda x: app.root.ids.nav_drawer.set_state("open")]]
        InfoContent:

<NewMeasureScreen>:
    name: "new_measure"
    BoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: "Nuova Misura"
            elevation: 4
            left_action_items: [["menu", lambda x: app.root.ids.nav_drawer.set_state("open")]]
        NewMeasureContent:
            id: new_measure_content
        
<HomeContent@BoxLayout>:
    orientation: "vertical"
    MDLabel:
        text: "Benvenuto! Ecco le Misurazioni:"
        font_style: "H6"
        size_hint_y: None
        size_hint: 0.9, 0.07
        padding: ["0dp", "20dp", "0dp", "0dp"]
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
    MeasureTableScreen:

    BoxLayout:
        orientation: "horizontal"
        padding: ["0dp", "0dp", "0dp", "20dp"]
        spacing: "10dp"
        size_hint: 0.9, 0.13
        pos_hint: {'center_x': 0.5,'center_y': 0.5}

        MDRectangleFlatIconButton:
            icon:"plus"
            text: "Nuova Misura"
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            on_press: app.navigate_to_new_measure()

        MDRectangleFlatIconButton:
            icon:"download"
            text: "Esporta CSV"
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            on_press: app.export_in_csv()

<MeasureTableScreen>:
    name: "table"
        
<InfoContent@BoxLayout>:
    orientation: "vertical"
    padding: ["0dp", "0dp", "0dp", "20dp"]
    MDLabel:
        text: "Mercury"
        size_hint: 0.9, None
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        font_style: "H5"
    MDLabel:
        text: "Mercury è un progetto open source realizzato in Python grazie alla libreria Kivymd. Questa applicazione è dedicata a tenere traccia delle misurazioni di pressione sanguigna. La gestione dei dati è realizzata con SQLite3. Il codice è visibile e completamente modificabile su GitHub raggiungibile dal bottone qui in basso."
        size_hint: 0.9, None
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        font_style: "Body1"
    Widget:
    MDRectangleFlatIconButton:
        icon:"github"
        text: "Vai alla Repo GitHub"
        size_hint: 0.9, 0.1
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        on_press: app.open_the_repo()

<NewMeasureContent@BoxLayout>:
    orientation: "vertical"
    size_hint: 0.9, 0.93
    pos_hint: {'center_x': 0.5,'center_y': 0.5}
    padding: ["0dp", "10dp", "0dp", "10dp"]
    spacing: "10dp"

    MDTextField:
        id:campo_massima
        hint_text:"Pressione Massima"
        helper_text: "mmHg, Millimetri di Mercurio"
        helper_text_mode: "on_focus"
        icon_right: "arrow-up"
        icon_right_color: app.theme_cls.primary_color
        pos_hint:{"center_x":0.5, "center_y":0.5}
        size_hint_x: None
        width: 300

    MDTextField:
        id:campo_minima
        hint_text:"Pressione Minima"
        helper_text: "mmHg, Millimetri di Mercurio"
        helper_text_mode: "on_focus"
        icon_right: "arrow-down"
        icon_right_color: app.theme_cls.primary_color
        pos_hint:{"center_x":0.5, "center_y":0.5}
        size_hint_x: None
        width: 300

    MDTextField:
        id:campo_pulsazioni
        hint_text:"Frequenza Cardiaca"
        helper_text: "BPM, Battiti al secondo"
        helper_text_mode: "on_focus"
        icon_right: "heart"
        icon_right_color: app.theme_cls.primary_color
        pos_hint:{"center_x":0.5, "center_y":0.5}
        size_hint_x: None
        width: 300

    MDTextField:
        id:campo_stato_psicologico
        hint_text:"Stato Psicologico"
        helper_text: "Numero tra 1 e 10"
        helper_text_mode: "on_focus"
        icon_right: "brain"
        icon_right_color: app.theme_cls.primary_color
        pos_hint:{"center_x":0.5, "center_y":0.5}
        size_hint_x: None
        width: 300

    BoxLayout:
        orientation: "horizontal"
        size_hint: 0.9, 0.02
        pos_hint:{"center_x":0.5, "center_y":0.5}
        padding: ["0dp", "20dp", "0dp", "10dp"]
        spacing: "5dp"
        MDIcon:
            icon:"pill"
            size_hint: 0.1, 0.9
            pos_hint:{"center_x":0.5, "center_y":0.5}
            size: "20dp", "20dp"
        MDLabel:
            text: "Pastiglia"
            font_size: "17dp"
            size_hint: 0.9, 0.9
            pos_hint:{"center_x":0.5, "center_y":0.5}
        MDCheckbox:
            id: campo_pastiglia
            size_hint: 0.1, 0.9
            pos_hint:{"center_x":0.5, "center_y":0.5}

    BoxLayout:
        orientation: "horizontal"
        padding: ["0dp", "150dp", "0dp", "20dp"]
        spacing: "10dp"
        size_hint: 0.9, 0.1
        pos_hint: {'center_x': 0.5,'center_y': 0.5}

        MDRectangleFlatIconButton:
            icon: "check"
            text: "Conferma"
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            on_press: app.new_measure()

        MDRectangleFlatIconButton:
            icon: "keyboard-return"
            text: "Annulla"
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            on_press: app.reset_value()
